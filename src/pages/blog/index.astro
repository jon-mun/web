---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Blog">
	<section>
		<h1 class="text-3xl font-bold text-gray-900 mb-8">Blog</h1>
		<ul class="space-y-8">
			{
				posts.map((post) => (
					<li class="group">
						<a href={`/blog/${post.id}/`} class="block">
							<div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2">
								<h2 class="text-xl font-semibold text-gray-900 group-hover:text-gray-600 transition-colors">
									{post.data.title}
								</h2>
								<span class="text-sm text-gray-500 mt-1 sm:mt-0">
									<FormattedDate date={post.data.pubDate} />
								</span>
							</div>
							<p class="text-gray-600">{post.data.description}</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</Layout>